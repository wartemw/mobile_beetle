<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beetle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="background">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GradientButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/gradient</item>
    </style>
    <style name="ActiveGradientButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#8A3A3A</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/gradient</item>
    </style>
</resources>